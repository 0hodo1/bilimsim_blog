<h1>articles listing page</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Operation</th>
        </tr>
    </thead>

    <tbody>
        <% @articles.each do |article|%>
            <tr>
                <td><%= article.title %></td>
                <td><%= article.description %></td>
                <td colspan="3">
                    <%=link_to 'Show', article_path(article.id) %>
                    <%=link_to 'Edit', edit_article_path(article.id) %>
                    <%=link_to 'Delete', article_path(article.id), method: :delete, data: {confirm: "Are you sure?"} %>
                </td>
            </tr>
        <% end %>    
    </tbody>
</table>
<p>
    <%=link_to 'New article', new_article_path %> |
    <%=link_to 'Go to home page', root_path %>
</p>